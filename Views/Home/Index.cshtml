@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<StocksApplication.Models.Company>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }
        <meta name="viewport" content="width=device-width" / >
        <title > Index</title >
        <style type="text/css" >
        body {
            font-family: Arial;
            font-size: 10pt;
        }

        table {
            border: 1px solid #ccc;
            border-collapse: collapse;
            background-color: #fff;
        }

            table th {
                background-color: #66FF99;
                color: #333;
                font-weight: bold;
            }

            table th, table td {
                padding: 5px;
                border: 1px solid #ccc;
            }

            table, table table td {
                border: 0px solid #ccc;
            }
    </style>
</head>
<body>
    <div>
        <h4>Companies List Available</h4>
        <hr />
        <br />
        @using (Html.BeginForm("Companies", "Home", FormMethod.Post))
        {
            <b>Search By:</b>
            @Html.RadioButton("searchBy", "Symbol", true) <text>Symbol</text>
            @Html.RadioButton("searchBy", "Name") <text>CompanyName</text><br />
            @Html.TextBox("search") <input type="submit" class="btn btn-dark" value="Search" />
        }
    </div>
    <p>* when searching by symbol please provide exact symbol of the company</p>
    <br />

    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Symbol</th>
            <th>CompanyName</th>
            <th>TypeOfCompany</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">No rows match the search criteria </td>
            </tr>
        }
        else
        {
            @foreach (Company company in Model)
            {
                <tr>
                    <td>@company.Symbol</td>
                    <td>@company.Name</td>
                    <td>@company.Type</td>
                </tr>
            }
        }
    </table>
    <br />
    </div>
</body>
</html>
